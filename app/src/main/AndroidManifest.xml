<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devfusion.movielens">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MovieLensApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieLens">
        <activity
            android:name=".ApiKeyManager"
            android:exported="false" />
        <activity
            android:name=".RetrofitClient"
            android:exported="false" />
        <activity
            android:name=".UserMovie"
            android:exported="false" />
        <activity
            android:name=".MovieRepository"
            android:exported="false" />
        <activity
            android:name=".HomeUiState"
            android:exported="false" />
        <activity
            android:name=".UserMovieInteraction"
            android:exported="false" />
        <activity
            android:name=".RecommendationUiState"
            android:exported="false" /> <!-- REMOVE THIS INVALID ACTIVITY DECLARATION -->
        <!--
 <activity
            android:name=".ProfileViewModel"
            android:exported="false" />
        -->
        <!-- Launch app at SignInActivity so unauthenticated users see auth first -->
        <activity
            android:name=".SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieLens">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieLens" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieLens" />
    </application>

</manifest>